<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAEDDF"
    tools:context=".login_page">

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="60dp"
        android:text="LOGIN IN"
        android:textSize="50dp"
        android:textColor="@android:color/system_accent3_900"
        android:fontFamily="@font/lonely"
        tools:targetApi="s"
        android:layout_marginBottom="60dp"/>

    <ImageView
        android:id="@+id/i2"
        android:layout_marginTop="120dp"
        android:layout_width="360dp"
        android:layout_height="147dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/students1"/>

    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:fontFamily="@font/lonely"
        android:hint="Username"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="#ACA4CC" />


    <EditText
        android:id="@+id/et3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et1"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/lonely"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="48dp"

        android:textColor="#ACA4CC" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t4"
        android:text="Dont Have an Account?"
        android:layout_below="@id/et3"
        android:layout_marginLeft="200dp"
        android:textColor="#352C57"
        android:fontFamily="@font/lonely"/>



    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="155dp"
        android:text="Login"
        android:backgroundTint="#9AD0D3"
        android:layout_below="@id/t4"
        android:layout_marginTop="16dp"
        android:textColor="#343339"
        android:fontFamily="@font/lonely" />

</RelativeLayout>





